# =========================================================
# Server Configuration
# =========================================================
# Port on which the Spring Boot application will run
SERVER_PORT=8081

# Base context path for all backend APIs
SERVER_CONTEXT_PATH=/backend/v1


# =========================================================
# Database Configuration (MySQL 8+)
# =========================================================
# JDBC URL for MySQL database
# Example: jdbc:mysql://localhost:3306/ai_ecommerce?createDatabaseIfNotExist=true
DB_URL=jdbc:mysql://localhost:3306/your_database_name?createDatabaseIfNotExist=true

# Database username
DB_USERNAME=your_db_username

# Database password
DB_PASSWORD=your_db_password


# =========================================================
# JWT Configuration
# =========================================================
# Secret key used to sign JWT tokens
# Use a strong, random value in production
JWT_SECRET_KEY=your_jwt_secret_key


# =========================================================
# Cloudinary Configuration (Image Storage)
# =========================================================
# Cloudinary cloud name
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name

# Cloudinary API key
CLOUDINARY_API_KEY=your_cloudinary_api_key

# Cloudinary API secret
CLOUDINARY_API_SECRET=your_cloudinary_api_secret


# =========================================================
# Spring AI - Ollama Configuration
# =========================================================
# Base URL where Ollama is running
# Default: http://localhost:11434
OLLAMA_BASE_URL=http://localhost:11434


# =========================================================
# Default Admin User (Created on Application Startup)
# =========================================================
# Default admin username
ADMIN_USERNAME=your_admin_username

# Default admin password
ADMIN_PASSWORD=your_admin_password

# Default admin email
ADMIN_EMAIL=admin@example.com
